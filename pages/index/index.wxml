<view class="content">
    <view class="category category-audio">
        <view class="title category-audio-title">语音功能</view>
        <view class="content category-audio-content">
            <button type="default" bindtap="start" style="width:400rpx;">录音</button>
            <button type="primary" bindtap="audioPlay">播放</button>
            <button type="warn" bindtap="audioPause">暂停</button>
        </view>
    </view>
</view>