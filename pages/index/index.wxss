.content {
    background-color: #3f3f3f;
    margin-bottom: 110rpx;
}

.content scroll-view {
    width: 750rpx;
    height: auto;
    background: #3f3f3f;
}

.content scroll-view .dialogue {
    width: 710rpx;
    margin: 20rpx;
    display: flex;
    flex-direction: column;
}

.dialogue .right {
    display: inline-flex;
    justify-content: flex-end;
    margin-top: 20rpx;
}

.dialogue .right:first-child {
    margin-top: 0;
}

.dialogue .right .cont {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    padding: 0 20rpx;
    border-radius: 10rpx;
    max-width: 460rpx;
    background: #a2e563;
    font-size: 30rpx;
    position: relative;
}

.dialogue .right .cont::after {
    position: absolute;
    content: '';
    width: 20rpx;
    height: 20rpx;
    background: #a2e563;
    right: -8rpx;
    top: 30rpx;
    transform: rotate(45deg);
}

.dialogue .right image {
    width: 80rpx;
    height: 80rpx;
    /* border-radius: 100%; */
    margin-left: 20rpx;
}

.dialogue .left {
    justify-content: flex-start;
}

.dialogue .left .cont {
    background: #fff;
}

.dialogue .left image {
    margin-left: 0;
    margin-right: 20rpx;
}

.dialogue .left .cont::after {
    position: absolute;
    content: '';
    width: 20rpx;
    height: 20rpx;
    background: #fff;
    left: -8rpx;
    top: 30rpx;
    transform: rotate(45deg);
}

.page-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.bottom {
    width: 714rpx;
    background-color: #e5e5e7;
    box-sizing: content-box;
    padding: 10rpx 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    border-bottom: 1px solid #c7c7ca;
}

.bottom .img {
    display: inline-flex;
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    justify-content: center;
}

.bottom button {
    display: inline-flex;
    font-size: 32rpx;
    width: 560rpx;
    background-color: #e5e5e7;
    justify-content: center;
}

.bottom #ipt {
    display: inline-flex;
    height: 76rpx;
    font-size: 32rpx;
    width: 540rpx;
    border: 2rpx solid rgba(0, 0, 0, 0.2);
    border-radius: 10rpx;
    padding: 0 10rpx;
    background-color: #fff;
    margin-left: auto;
    margin-right: auto;
}
