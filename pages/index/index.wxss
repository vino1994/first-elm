.content {
    background-color: #3f3f3f;
}

.page-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.bottom {
    width: 714rpx;
    background-color: #e5e5e7;
    box-sizing: content-box;
    padding: 10rpx 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    border-bottom: 1px solid #c7c7ca;
}

.bottom .img {
    display: inline-flex;
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    justify-content: center;
}

.bottom button {
    display: inline-flex;
    font-size: 32rpx;
    width: 560rpx;
    background-color: #e5e5e7;
    justify-content: center;
}

.bottom #ipt {
    display: inline-flex;
    height: 76rpx;
    font-size: 32rpx;
    width: 540rpx;
    border: 2rpx solid rgba(0, 0, 0, 0.2);
    border-radius: 10rpx;
    padding: 0 10rpx;
    background-color: #fff;
    margin-left: auto;
    margin-right: auto;
}
