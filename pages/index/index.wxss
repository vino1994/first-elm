.content {
    background-color: #3f3f3f;
}

.page-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 714rpx;
    background-color: #e5e5e7;
    box-sizing: content-box;
    padding: 10rpx 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
}

.page-bottom .img {
    display: inline-flex;
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    justify-content: center;
}

.page-bottom button {
    display: inline-flex;
    font-size: 32rpx;
    width: 560rpx;
    background-color: #e5e5e7;
    justify-content: center;
}

.page-bottom input {
    display: inline-flex;
    height: 76rpx;
    font-size: 32rpx;
    width: 540rpx;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 10rpx;
    padding: 0 10rpx;
    background-color: #fff;
    margin-left: auto;
    margin-right: auto;
}