/* pages/order/order.wxss */
.map_container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.map_container .code{
  position:absolute;
  bottom:5%;
  width:40%;
  left:0;
  right:0;
  margin:0 auto;
  text-align:center;
  background:#29c2c1;
  border-radius:15px;
  padding:2px 5px;
  z-index:9;
}
.map_container .code .scan{
  position: absolute;
  width:20px;
  height: 20px;
  background: url('../../images/scan.png') no-repeat;
  background-size: 100% 100%;
  z-index: 9;
  left:10%;
  top:17%;
  color:#fff;

}
.map_container .code span{
  color:#fff;
  font-size: 14px;
}
.map_container .localtion{
  position:absolute;
  bottom:6%;
  left:10px;
  width:20px;
  height:20px;
  background:url('../../images/localtion.png') no-repeat;
  background-size:100% 100%;
  z-index:9;
}
.map_container .localtion::after{
  content: '';
  position: absolute;
  width: 30px;
  height: 30px;
}