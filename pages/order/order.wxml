<view class="map_container">
    <view class="code" bindtap="scanCode">
        <span class="scan"></span>
        <span>扫码充电</span>
     </view>
     <image src="../../images/localtion.png"></image>
     <span class="localtion" bindtap="localtionAddr"></span>
    <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="16"
     markers="{{markers}}" style="width:100%;height:100%;" bindregionchange="regionchange" 
     show-location controls="{{controls}}"></map>
</view>